# =============================================================================
# Laravel application
# =============================================================================
COMPOSE_PROJECT_NAME="mrifqyabdallah"
GITHUB_REPOSITORY="mrifqyabdallah/mrifqyabdallah.com"

APP_NAME="mrifqyabdallah"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://mrifqyabdallah.test
APP_HOST=mrifqyabdallah.test

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# =============================================================================
# Database (PostgreSQL)
# These values are shared between the app container and the postgres container.
# =============================================================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=mrifqyabdallah
DB_USERNAME=laravel
DB_PASSWORD=secret

# =============================================================================
# SSL â€” production only (Caddy + Cloudflare DNS challenge)
# =============================================================================
# Cloudflare API token used by Traefik to perform the DNS challenge.
# How to create one:
#   1. Go to https://dash.cloudflare.com/profile/api-tokens
#   2. Click "Create Token"
#   3. Use the "Edit zone DNS" template
#   4. Under "Zone Resources", select your specific domain (foo.com)
#   5. Copy the generated token here
CF_DNS_API_TOKEN=
# Email address for Let's Encrypt notifications (certificate expiry warnings etc.)
ACME_EMAIL=you@example.com

# =============================================================================
# Cache / Session / Queue
# =============================================================================
CACHE_STORE=file

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# =============================================================================
# Mail
# =============================================================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# Logging
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
